# HomeGenie Docker Environment Configuration

# MQTT Broker Settings
MQTT_BROKER_HOST=mqtt-broker
MQTT_BROKER_PORT=1883

# API Backend Settings  
API_HOST=0.0.0.0
API_PORT=8000

# Device Simulator Settings
SIMULATOR_DEVICES=light,thermostat,lock,media,sensor

# Logging Configuration
LOG_LEVEL=INFO

# Network Configuration
COMPOSE_PROJECT_NAME=homegenie

# Docker Compose Settings
COMPOSE_FILE=docker-compose.yml

# Volume Settings
MOSQUITTO_DATA_PATH=./docker/mosquitto/data
MOSQUITTO_LOG_PATH=./docker/mosquitto/log
BACKEND_DATA_PATH=./docker/backend/data
BACKEND_LOGS_PATH=./docker/backend/logs

# Health Check Settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Development Settings
DEVELOPMENT_MODE=true
MOCK_DEVICES=true

# Security Settings (Development)
ENABLE_AUTHENTICATION=false
CORS_ORIGINS=*